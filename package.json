{
  "name": "ui5-test-runner",
  "version": "2.0.0",
  "description": "Standalone test runner for UI5",
  "main": "index.js",
  "files": [
    "defaults/*",
    "src/**/*",
    "*.js"
  ],
  "bin": {
    "ui5-test-runner": "./index.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "lint": "standard --fix",
    "test": "jest",
    "test:debug": "jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArnaudBuchholz/ui5-test-runner.git"
  },
  "keywords": [
    "REserve",
    "test",
    "continuous",
    "integration",
    "code",
    "coverage",
    "ui5"
  ],
  "author": "Arnaud Buchholz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArnaudBuchholz/ui5-test-runner/issues"
  },
  "homepage": "https://github.com/ArnaudBuchholz/ui5-test-runner#readme",
  "dependencies": {
    "mime": "^3.0.0",
    "reserve": "^1.15.1"
  },
  "devDependencies": {
    "jest": "^28.1.3",
    "nock": "^13.2.9",
    "standard": "^17.0.0"
  },
  "standard": {
    "env": [
      "browser",
      "qunit",
      "node",
      "jest"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "\\.spec\\.js",
      "output\\.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
