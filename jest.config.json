{
  "testTimeout": 15000,
  "setupFilesAfterEnv": [
    "./test/setup.js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/capabilities/",
    "/e2e/"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/*.js",
    "src/defaults/junit-xml-report.js"
  ],
  "coveragePathIgnorePatterns": [
    "\\.spec\\.js",
    "output\\.js",
    "handle\\.js",
    "coverage\\.js",
    "b\\capabilities\\b"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
